---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---
<div class="has-text-centered">
	<h1 class='tag'>Tagged “{{ tag }}”</h1>
</div>


{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<p class='has-text-centered'>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
