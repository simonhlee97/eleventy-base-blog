<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.4.0/css/all.min.css">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header style='text-align:center;'>
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
	  		<li class="nav-item"><img class='ryu' style="height:40px;" src='https://res.cloudinary.com/ryucave/image/upload/v1591860723/simon/hadouken89_fn2qxy.jpg' alt='Ryu'/></li>
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
	  		<li class="nav-item left-facing"><img class='ryu-r' style="height:40px;" src='https://res.cloudinary.com/ryucave/image/upload/v1591860723/simon/hadouken89_fn2qxy.jpg' alt='Ryu'/></li>
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

	<!-- - - -  Footer - - -->
	<section class="mt-6 hero is-small is-dark is-bold">
		<div class="hero-body">
			<div class="container has-text-centered">
				<div class='columns'>
					<div class='column'><a href="https://simonhlee97.github.io/" target="_blank"><i class="far fa-address-book fa-2x my-social"></i></a></div>
					<div class='column'><a href="https://linkedin.com/in/simon-h-lee/" target="_blank"><i class="fab fa-linkedin fa-2x my-social"></i></a></div>
					<div class='column'><a href="https://github.com/simonhlee97/" target="_blank"><i class="fab fa-github fa-2x my-social"></i></a></div>
					<div class='column'><a href="https://twitter.com/simonhlee97" target="_blank"><i class="fab fa-twitter fa-2x my-social"></i></a></div>
				</div>
				<div id='copyright' class='subtitle'>
					<p>Built with <a class="footer-link" href="https://11ty.dev/" target="_blank">Eleventy</a> and <a class="footer-link" href="https://bulma.io/">BulmaCSS</a></p>
					<br>
					<p>Copyright 2020 RyuCave.com</p>
				</div>
			</div>
		</div>
	</section>
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
