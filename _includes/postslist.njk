<div reversed class="postlist2" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{# <div class="postlist2"> #}

	{% for post in postslist | reverse %}
		<div class="postlist2-item{% if post.url == url %} postlist-item-active{% endif %}">
			<a href="{{ post.url | url }}" class="postlist2-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a><br>
			<time class="postlist2-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time><br>
			{% for tag in post.data.tags %}
				{%- if collections.tagList.indexOf(tag) != -1 -%}
					{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
				{%- endif -%}
			{% endfor %}
		</div>
	{% endfor %}
</div>